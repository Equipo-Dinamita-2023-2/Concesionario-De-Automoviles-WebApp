{
  "version": 2,
  "builds": [
    {
      "src": "concesionario_webapp/**",
      "use": "@vercel/static-build",
      "config": { "distDir": "concesionario_webapp" }
    },
    {
      "src": "pag-react/**",
      "use": "@vercel/static-build",
      "config": { "distDir": "pag-react/build" },
      "builds": [
        { "src": "pag-react/build/**", "use": "@vercel/static" },
        {
          "src": "pag-react/**",
          "use": "@vercel/node",
          "config": { "maxLambdaSize": "10mb" }
        }
      ],
      "env": {
        "BUILD_SCRIPT": "./build.sh"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/concesionario_webapp/$1"
    },
    {
      "src": "/pag-react/(.*)",
      "dest": "/pag-react/$1"
    },
    {
      "src": "/static/(.*)",
      "dest": "/concesionario_webapp/static/$1"
    }
  ]
}
